               feedbackDevice="QUADENCODER"
               countsPerRev="4096"
               gearRatio="1.0"
               brakeMode="true"/>

        <motor usage="DIFFERENTIAL_RIGHT_MAIN"
               canId="14"
               pdpID="14"
               type="TALONSRX"
               inverted="false"
               sensorInverted="false"
               feedbackDevice="QUADENCODER"
               countsPerRev="4096"
               gearRatio="1.0"
               brakeMode="true"/>

        <motor usage="DIFFERENTIAL_RIGHT_FOLLOWER"
               canId="15"
               pdpID="15"
               slaveTo="14"
               type="TALONSRX"
               inverted="false"
               sensorInverted="false"
               feedbackDevice="QUADENCODER"
               countsPerRev="4096"
               gearRatio="1.0"
               brakeMode="true"/>

        </motor>
    </chassis>

