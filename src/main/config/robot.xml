<!DOCTYPE robot SYSTEM "robot.dtd">
<robot>

    <chassis type="TANK"
             wheelDiameter="4.0"
             wheelBase="13.75"
             track="15.0"
             maxVelocity="36.0"
             maxAngularVelocity="12.0"
